<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cidade"
        android:id="@+id/city_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Atual"
        android:id="@+id/temp_atual"
        android:textSize="50dp"
        android:layout_below="@+id/city_name"
        android:layout_toEndOf="@+id/city_name"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/temp_max"
        android:text="Max"
        android:layout_alignBottom="@+id/temp_atual"
        android:layout_alignStart="@+id/temp_min" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Min"
        android:id="@+id/temp_min"
        android:layout_gravity="right|top"
        android:layout_alignTop="@+id/temp_atual"
        android:layout_toEndOf="@+id/temp_atual"
        android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R$100 na cidade selecionada"
        android:id="@+id/actual_currency_name"
        android:layout_gravity="right|top"
        android:layout_below="@+id/temp_atual"
        android:layout_alignStart="@+id/city_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Moeda"
        android:id="@+id/actual_currency"
        android:layout_gravity="right|top"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/actual_currency_name"
        android:layout_alignEnd="@+id/weather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tempo"
        android:id="@+id/weather"
        android:layout_gravity="right|top"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/actual_currency"
        android:layout_alignEnd="@+id/temp_atual" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        design:srcCompat="@android:drawable/ic_lock_power_off"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/actual_currency"
        android:layout_marginEnd="11dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">
        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navBot"
            android:layout_gravity="bottom"
            design:menu="@menu/menu_nav"
            android:background="@android:color/white"/>
    </RelativeLayout>


</RelativeLayout>